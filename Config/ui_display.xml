<configs>
  <append xpath="/ui_display_info/item_display">
    <item_display_info display_type="armorWhisper" display_group="groupAttire">
			<display_entry name="dStaminaChangeOT" title_key="statStaminaChangeOT" display_type="Decimal2"/>
			<display_entry name="DegradationMax" title_key="statDegradationMax"/>
			<display_entry name="Mobility" title_key="statMobility" display_type="Percent" display_leading_plus="true" show_inverted="true" negative_preferred="false"/>
			<display_entry name="BuffResistance" title_key="statBuffResistance" display_type="Percent" tags="critResistDisplay" show_inverted="false"/>
			<display_entry name="PhysicalDamageResist" display_type="Decimal1" title_key="statPhysicalDamageResist" display_leading_plus="true"/>
			<display_entry name="ElementalDamageResist" display_type="Decimal1" title_key="statExplosionResistance" display_leading_plus="true" tags="heat,electrical"/>
			<display_entry name="HypothermalResist" display_type="Decimal1" title_key="statHypothermalResist"/>
			<display_entry name="HyperthermalResist" display_type="Decimal1" title_key="statHyperthermalResist"/>
			<display_entry name="dLightMultiplier" title_key="statVisibility" display_type="Percent" display_leading_plus="true" show_inverted="false" negative_preferred="false"/>
			<display_entry name="dNoiseMultiplier" title_key="statNoiseReduction" display_type="Percent" display_leading_plus="true" show_inverted="false" negative_preferred="false"/>
    </item_display_info>

    <item_display_info display_type="clothingFourEyes" display_group="groupAttire">
      <display_entry name="AttributeLevel" tags="attPerception" title_key="statShowPerception" display_leading_plus="true" />
      <display_entry name="AttributeLevel" tags="attFortitude" title_key="statShowFortitude" display_leading_plus="true" />
      <display_entry name="AttributeLevel" tags="attAgility" title_key="statShowAgility" display_leading_plus="true" />
      <display_entry name="AttributeLevel" tags="attIntellect" title_key="statShowIntellect" display_leading_plus="true" />
      <display_entry name="dCraftingTime" title_key="statCraftingTime" display_type="Percent" display_leading_plus="true" negative_preferred="true" />
      <display_entry name="LootGamestage" title_key="statLootGamestage" display_leading_plus="true" />
      <display_entry name="dTreasureBlocksPerReduction" title_key="statTreasureRadius" display_leading_plus="true" negative_preferred="true" />
      <display_entry name="dPlayerExpGain" title_key="statShowPlayerExpGain" display_type="Percent" display_leading_plus="true" />
    </item_display_info>

    <item_display_info display_type="clothingFourEyesNV" display_group="groupAttire">
      <display_entry name="AttributeLevel" tags="attPerception" title_key="statShowPerception" display_leading_plus="true" />
      <display_entry name="AttributeLevel" tags="attFortitude" title_key="statShowFortitude" display_leading_plus="true" />
      <display_entry name="AttributeLevel" tags="attAgility" title_key="statShowAgility" display_leading_plus="true" />
      <display_entry name="AttributeLevel" tags="attIntellect" title_key="statShowIntellect" display_leading_plus="true" />
      <display_entry name="dCraftingTime" title_key="statCraftingTime" display_type="Percent" display_leading_plus="true" negative_preferred="true" />
      <display_entry name="LootGamestage" title_key="statLootGamestage" display_leading_plus="true" />
      <display_entry name="dTreasureBlocksPerReduction" title_key="statTreasureRadius" display_leading_plus="true" negative_preferred="true" />
      <display_entry name="dPlayerExpGain" title_key="statShowPlayerExpGain" display_type="Percent" display_leading_plus="true" />
    </item_display_info>

  </append>
</configs>